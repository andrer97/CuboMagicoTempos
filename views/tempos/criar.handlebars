<h1>Criando um registro de tempos</h1>
<form action="/tempos/adicionar" method="POST">
  <div class="form-control">
    <label for="nome">Nome:</label>
    <input type="text" name="nome" placeholder="Seu nome" required>
  </div>
  
  <div class="form-control">
    <label for="tempo1">Tempo 1:</label>
    <input type="number" name="tempo1" step="0.01" placeholder="Tempo 1" required>
  </div>
  
  <div class="form-control">
    <label for="tempo2">Tempo 2:</label>
    <input type="number" name="tempo2" step="0.01" placeholder="Tempo 2" required>
  </div>
  
  <div class="form-control">
    <label for="tempo3">Tempo 3:</label>
    <input type="number" name="tempo3" step="0.01" placeholder="Tempo 3" required>
  </div>
  
  <div class="form-control">
    <label for="tempo4">Tempo 4:</label>
    <input type="number" name="tempo4" step="0.01" placeholder="Tempo 4" required>
  </div>
  
  <div class="form-control">
    <label for="tempo5">Tempo 5:</label>
    <input type="number" name="tempo5" step="0.01" placeholder="Tempo 5" required>
  </div>
  
  <input type="submit" value="Criar Registro">
</form>
