<h1>Todos os Tempos:</h1>
<ul class="tempo-lista">
  {{#if nenhumRegistro}}
    <p>Não há tempos cadastrados</p>
  {{/if}}
  {{#each tempos}}
    <li>
      <span class="nome">{{this.nome}}</span>
      <span class="tempos">
        
      <table class="table table-bordered table-striped">
        <tr>
          {{#each tempo}}
          {{/each}}
          <td>{{this.tempo1}}</td>
          <td>{{this.tempo2}}</td>
          <td>{{this.tempo3}}</td>
          <td>{{this.tempo4}}</td>
          <td>{{this.tempo5}}</td>
          <td>Média: {{this.media}}</td>
        </tr>
      </table>
        
      </span>
      <span class="actions">
        <a href="/tempos/editar/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tempos/remove" method="POST">
          <input type="hidden" name="id" value={{this.id}}>
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>