<h1>Todos os Tempos:</h1>
<ul class="tempo-lista">
  {{#if nenhumRegistro}}
    <p>Não há tempos cadastrados</p>
  {{/if}}
  {{#each tempos}}
    <li>
      <span class="nome">{{this.nome}}</span>
      <span class="tempos">
        Tempo 1: {{this.tempo1}} | 
        Tempo 2: {{this.tempos2}} | 
        Tempo 3: {{this.tempos3}} | 
        Tempo 4: {{this.tempos4}} | 
        Tempo 5: {{this.tempos5}} | 
        Média: {{this.media}}
      </span>
      <span class="actions">
        <a href="/tempos/editar/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tempos/remove" method="POST">
          <input type="hidden" name="id" value={{this.id}}>
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>